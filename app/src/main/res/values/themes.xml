<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EastyPeasy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.EastyPeasy" parent="Base.Theme.EastyPeasy" />


    <!-- ===== HEADING STYLES (Nunito) ===== -->
    <style name="TextAppearance.Heading.Large">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Heading.Normal">
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:textSize">28sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Heading.Small">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- ===== PARAGRAPH STYLES (Lato) ===== -->
    <style name="TextAppearance.Paragraph.Medium">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Paragraph.Small">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Paragraph.Tiny">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- ===== LARGE TEXT STYLES (Mixed) ===== -->
    <style name="TextAppearance.Paragraph.Large.Medium">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">22sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Paragraph.Large.Regular">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>