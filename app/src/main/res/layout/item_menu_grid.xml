<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp_16"
    android:layout_marginBottom="@dimen/dp_16">

    <androidx.cardview.widget.CardView
        android:id="@+id/clDishes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivDishes"
            android:layout_width="169dp"
            android:layout_height="115dp"
            android:scaleType="centerCrop"
            android:src="@drawable/thai_red_curry" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Button.Price"
            android:textColor="@color/textBlack"
            android:layout_gravity="start|top"
            android:layout_margin="@dimen/dp_8"
            android:background="@drawable/bg_price_tag"
            android:padding="4dp"
            android:text="$ 10"/>

        <ImageView
            android:id="@+id/ivAdd"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="end|bottom"
            android:layout_margin="@dimen/dp_8"
            android:background="@drawable/bg_primary_icon"
            android:contentDescription="Add to cart"
            android:src="@drawable/ic_add" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvName"
        style="@style/TextAppearance.Paragraph.Large.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_5"
        android:gravity="start"
        android:text="Thai Red Curry"
        android:textColor="@color/textDarker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clDishes" />

    <TextView
        android:id="@+id/tvDescription"
        style="@style/TextAppearance.Paragraph.Tiny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Sweet And Spicy Sauce"
        android:maxLines="1"
        android:autoSizeTextType="none"
        android:textColor="@color/textGreyLight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

</androidx.constraintlayout.widget.ConstraintLayout>