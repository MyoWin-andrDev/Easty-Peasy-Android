<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clListView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_marginEnd="@dimen/dp_16">

    <androidx.cardview.widget.CardView
        android:id="@+id/clDrinks"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/thai_red_curry" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/llDrinks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/ivAdd"
        app:layout_constraintStart_toEndOf="@id/clDrinks"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvName"
            style="@style/TextAppearance.Paragraph.Large.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Coffee Frappe"
            android:textColor="@color/textDarker" />

        <TextView
            android:id="@+id/tvDescription"
            style="@style/TextAppearance.Paragraph.Tiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:ellipsize="end"
            android:autoSizeTextType="none"
            android:maxLines="1"
            android:text="Iced coffee blended with milk and ice"
            android:textColor="@color/textGreyLight" />

        <TextView
            android:id="@+id/tvPrice"
            style="@style/TextAppearance.Button.Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 10"
            android:textColor="@color/textBlack" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivAdd"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/bg_primary_icon"
        android:contentDescription="Add to cart"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>